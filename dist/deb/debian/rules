#!/usr/bin/make -f
BUILD_ROOT := $(CURDIR)/debian/verdictd
BUILD_DIR := /usr/local/bin
LIB_DIR := /usr/local/lib
NAME := verdictd
VERDICT := verdict
OPA := libopa.so

%:
	dh $@

override_dh_shlibdeps:
	dh_shlibdeps --dpkg-shlibdeps-params=--ignore-missing-info

override_dh_auto_build:
	make

override_dh_auto_install:
	install -d -p $(BUILD_ROOT)$(BUILD_DIR)
	install -p -m 755 $(CURDIR)/target/release/$(NAME) $(BUILD_ROOT)$(BUILD_DIR)
	install -p -m 755 $(CURDIR)/target/release/$(VERDICT) $(BUILD_ROOT)$(BUILD_DIR)
	install -d -p $(BUILD_ROOT)$(LIB_DIR)
	install -p -m 755 $(CURDIR)/src/policy_engine/opa/$(OPA) $(BUILD_ROOT)$(LIB_DIR)

override_dh_usrlocal:

override_dh_auto_clean:
